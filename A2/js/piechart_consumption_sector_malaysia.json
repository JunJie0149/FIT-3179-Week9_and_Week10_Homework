{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url":"https://raw.githubusercontent.com/JunJie0149/FIT-3179-Week9_and_Week10_Homework/refs/heads/main/A2/dataset/electricity_consumption_sector_malaysia.csv"
    },
    "width": 500,
    "height": 500,
    "params": [
        {
            "name": "year_selection",
            "value": 2000,
            "bind": {
                "input": "range",
                "min": 2000,
                "max": 2022,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "point_selection",
            "select": {
                "type": "point",
                "on": "mouseover",
                "fields": ["Sector"]
            }
        },
        {
            "name": "sector_highlight",
            "select": {
                "type": "point", "fields": ["Sector"]
            },
            "bind": "legend"
        }
    ],
    "transform": [
        {"filter": "datum.Year == year_selection"}
    ],
    "layer": [
        {
            "mark": {
                "type": "arc",
                "strokeWidth": 3
            },
            "encoding": {
                "theta": {
                    "field": "Value", "type": "quantitative", "stack" : true
                },
                "color": {
                    "field": "Sector",
                    "type": "nominal",
                    "title": "Sectors",
                    "scale": {
                        "domain": [
                            "Industry", "Transport", "Residential", "Commercial and public services", "Agriculture / forestry"
                        ],
                        "range": [
                            "#225ea8", "#e31a1c", "#feb24c", "#c994c7", "#ae017e"
                        ]
                    }
                },
                "opacity": {
                        "condition": {"param": "sector_highlight", "value": 1.0},
                        "value": 0.2
                    },
                "tooltip": [
                    {"field": "Sector", "type": "nominal", "title": "Sector"},
                    {"field": "Year", "type": "quantitative"},
                    {"field": "Value", "type": "quantitative", "format": ",", "title": "Electricity Consumed (TJ)"}
                ],
                "stroke": {
                    "condition": {
                        "test": {
                            "param": "point_selection",
                            "empty": false
                        },
                        "value": "black"
                    }
                }
            }
        }
    ]
}

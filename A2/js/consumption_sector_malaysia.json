{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url":"https://raw.githubusercontent.com/JunJie0149/FIT-3179-Week9_and_Week10_Homework/refs/heads/main/A2/dataset/electricity_consumption_sector_malaysia.csv"
    },
    "width": 450,
    "height": 400,
    "params": [
        {
            "name": "year_selection",
            "value": 2000,
            "bind": {
                "input": "range",
                "min": 2000,
                "max": 2022,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "sector_selection",
            "bind": {
                "input": "select",
                "options": [
                    null, "Industry", "Transport", "Residential", "Commercial and public services", "Agriculture / forestry"
                ],
                "labels": [
                    "Show All", "Industry", "Transport", "Residential", "Commercial and public services", "Agriculture / forestry"
                ],
                "name": "Sector: "
            }
        }
    ],
    "transform": [
        {"filter": "sector_selection == null || datum.Sector == sector_selection"},
        {"filter": "datum.Year >= year_selection"}
    ],
    "encoding": {
        "x": {
            "field": "Year",
            "type": "quantitative",
            "scale": {
                "domain": [1999, 2023]
            },
            "axis": {
                "format": "f"
            }
        },
        "y": {
            "field": "Value",
            "type": "quantitative",
            "title": "Electricity Generation (GWh)",
            "scale": {
                "domain": [1, 300000]
            }
        }
    },
    "layer": [
        {
            "mark": {
                "type": "line",
                "point": true
            },
            "encoding": {
                "color": {
                    "field": "Sector",
                    "type": "nominal",
                    "title": "Sectors",
                    "scale": {
                        "domain": [
                            "Industry", "Transport", "Residential", "Commercial and public services", "Agriculture / forestry"
                        ],
                        "range": [
                            "#74a9cf", "#feb24c", "#e31a1c", "#034e7b", "#9e9ac8"
                        ]
                    }
                },
                "tooltip": [
                    {"field": "Sector", "type": "nominal", "title": "Sector"},
                    {"field": "Year", "type": "quantitative"},
                    {"field": "Value", "type": "quantitative", "format": ",", "title": "Electricity Consumed (TJ)"}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "dx": -12,
                "fontSize": 12,
                "fontWeight": "bold",
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "Sector", 
                    "type": "nominal"
                },
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum.Year == 2020 && datum.Sector == 'Industry' || datum.Year == 2020 && datum.Sector == 'Commercial and public services' || datum.Year == 2020 && datum.Sector == 'Residential'",
                        "value": 1
                    },
                    "value": 0
                },
                "tooltip": [
                    {"field": "Sector", "type": "nominal", "title": "Sector"},
                    {"field": "Year", "type": "quantitative"},
                    {"field": "Value", "type": "quantitative", "format": ",", "title": "Electricity Generated (GWh)"}
                ]
            }
        }
    ]
}

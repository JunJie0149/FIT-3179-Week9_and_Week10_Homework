{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Electricity Consumption Around The World",
    "width": 800,
    "height": 400,
    "params": [
        {
            "name": "consumption_selection",
            "value": 100000,
            "bind": {
                "input": "range",
                "min": 100000,
                "max": 400000000,
                "step": 100000,
                "name": "Electricity Consumption: "
            }
        },
        {
            "name": "zoom_level",
            "value": 125,
            "bind": {
                "input": "range",
                "min": 125,
                "max": 500,
                "step": 10,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [0, 0],
            "bind": {
                "input": "select",
                "options": [
                    [0, 0],
                    [-102, 50],
                    [-55, -26],
                    [167,-16],
                    [102, 4],
                    [36, 0],
                    [57, 33],
                    [138, 37],
                    [26, 50]
                ],
                "labels": [
                    "Centre",
                    "North America",
                    "South America",
                    "Oceania",
                    "South East Asia",
                    "Africa",
                    "Middle East",
                    "Asia",
                    "Europe"
                ],
                "name": "Map Centre: "
            }
        }
    ],
    "projection": {
        "type": "equirectangular",
        "center": {"expr": "center_to"},
        "scale": {"expr": "zoom_level"}
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/JunJie0149/FIT-3179-Week9_and_Week10_Homework/refs/heads/main/A2/dataset/ne_110m.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 1.0,
                "fill": "#ddd"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/JunJie0149/FIT-3179-Week9_and_Week10_Homework/refs/heads/main/A2/dataset/ne_50m_ocean.json",
                "format": {"type": "topojson", "feature": "ne_50m_ocean"}
            },
            "mark": {
                "type": "geoshape",
                "fill": "skyblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/JunJie0149/FIT-3179-Week9_and_Week10_Homework/refs/heads/main/A2/dataset/ne_110m.json",
                "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/JunJie0149/FIT-3179-Week9_and_Week10_Homework/refs/heads/main/A2/dataset/electricity_consumption.csv"
            },
            "transform": [
                {
                    "lookup": "countries",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/JunJie0149/FIT-3179-Week9_and_Week10_Homework/refs/heads/main/A2/dataset/ne_110m.json",
                            "format": {
                                "type": "topojson", "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME"
                    },
                    "as": "geo"
                },
                {"filter": "datum.electricity_consumption >= consumption_selection"}
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#fff",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo", "type": "geojson"
                },
                "color": {
                    "field": "electricity_consumption",
                    "type": "quantitative",
                    "scale": {
                        "type": "log",
                        "scheme": "tealblues"
                    },
                    "title": "Electricity Consumption (KWh)"
                },
                "tooltip": [
                    {"field": "countries", "type": "nominal", "title": "Country:"},
                    {"field": "electricity_consumption", "type": "quantitative", "format": ",", "title": "Electricity Consumption (KWh):"}
                ]
            }
        }
    ]
}